<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock>NameN</TextBlock>
                <TextBox x:Name="NameNText" Width="100" Height="100" VerticalAlignment="Top" Margin="20"></TextBox>
            </StackPanel>
            <StackPanel>
                <TextBlock>NameT</TextBlock>
                <TextBox x:Name="NameTText" Width="100" Height="100" VerticalAlignment="Top" Margin="20"></TextBox>
            </StackPanel>
        </StackPanel>
        
        <Button x:Name="ProcessButton" Width="100" Height="30" Content="Process" Click="ProcessButton_OnClick"/>
    </Grid>
</Window>
